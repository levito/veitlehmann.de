---
import Footer from '../content/Footer.astro'
import Home from '../content/Home.astro'

export type SectionData = {
  Content: any
  Footer?: any
  frontmatter?: {
    title?: string
  }
}

export const markdownSections = await Promise.all(
  Object.values(import.meta.glob<SectionData>('./*.md')).map((res) => res()),
)

export const sections: SectionData[] = [
  { Content: Home, Footer },
  ...markdownSections,
]
---
